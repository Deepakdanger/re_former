      <div><%= message %></div>
    <% end %>
    </div>
  <div>
  <%= form.label :password, " New Password:"%> 
  <%= form.password_field :password%>
  <% @usermodel.errors.full_messages_for(:password).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <%= form.submit "Submit" %>
<% end %>
