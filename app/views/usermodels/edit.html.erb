<%= form_with model: @usermodel, method: :get do |form| %>
  <%= form.label :username, "Username:"%> 
  <%= form.text_field :username%>
  <% @usermodel.errors.full_messages_for(:username).each do |message| %>
      <div><%= message %></div>
    <% end %>
   
   <div>
  <%= form.label :email, "Email:"%> 
  <%= form.email_field :email %>
